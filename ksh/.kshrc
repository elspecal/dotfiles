alias ls='colorls'
alias ll='ls -lAhG'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias vim='nvim'
alias svim='doas nvim'
alias svi='doas vi'
alias mkdir='mkdir -p'
alias t='tmux new -As 0'
alias netrestart='doas ifconfig iwn0 down && doas sh /etc/netstart'
alias vimconf='vim ~/.config/nvim/init.lua'
alias vimopt='vim ~/.config/nvim/lua/options.lua'
alias add='doas pkg_add'
alias update='doas pkg_add -u'
alias vpn='wg-quick up /etc/wireguard/mullvad-hu3.conf'
alias vpnswe='wg-quick up /etc/wireguard/mullvad-se17.conf'
alias battery='apm'
alias music='cmus'

export VISUAL='vi'
